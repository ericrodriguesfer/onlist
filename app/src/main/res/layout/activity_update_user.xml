<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.updaters.UpdateUserActivity"
    android:id="@+id/drawerLayoutUpdateUserActivity"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textTitleUpdateUserActivity"
                    android:layout_width="342dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/roboto_black"
                    android:text="@string/textTitleUpdateUserActivity"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/textSubTitleUpdateUserActivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="@string/textSubTitleUpdateUserActivity"
                    android:textAlignment="viewStart"
                    android:textColor="@color/gray"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/nameLabelFormUpdateUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="@string/textTitleInputRegisterNameForm"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/inputNameFormUpdateUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/custom_input_form"
                    android:drawableEnd="@drawable/custom_people_icon"
                    android:drawablePadding="5dp"
                    android:ems="10"
                    android:fontFamily="@font/roboto_regular"
                    android:hint="@string/placeholderInputNameRegisterUserForm"
                    android:inputType="textPersonName"
                    android:padding="15dp"
                    android:textColor="@color/input_text_color" />

                <TextView
                    android:id="@+id/emailLabelFormRegisterUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="@string/textTitleInputLoginEmailForm"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/inputEmailFormUpdateUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/custom_input_form"
                    android:drawableEnd="@drawable/custon_email_icon"
                    android:drawablePadding="5dp"
                    android:ems="10"
                    android:fontFamily="@font/roboto_regular"
                    android:hint="@string/placeholderInputEmailRegisterUserForm"
                    android:inputType="textPersonName"
                    android:padding="15dp"
                    android:textColor="@color/input_text_color" />

                <TextView
                    android:id="@+id/passwordLabelFormUpdateUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="@string/textTitleInputRegisterPasswordForm"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/inputPasswordFormUpdateUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/custom_input_form"
                    android:drawableEnd="@drawable/custon_password_icon"
                    android:drawablePadding="5dp"
                    android:ems="10"
                    android:fontFamily="@font/roboto_regular"
                    android:hint="@string/placeholderInputPasswordRegisterUserForm"
                    android:inputType="textPassword"
                    android:padding="15dp"
                    android:textColor="@color/input_text_color" />

                <TextView
                    android:id="@+id/confirmPasswordLabelFormUpdateUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="@string/textTitleInputRegisterPasswordConfirmForm"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/inputConfirmPasswordFormUpdateUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/custom_input_form"
                    android:drawableEnd="@drawable/custon_password_icon"
                    android:drawablePadding="5dp"
                    android:ems="10"
                    android:fontFamily="@font/roboto_regular"
                    android:hint="@string/placeholderInputPasswordRegisterConfirmUserForm"
                    android:inputType="textPassword"
                    android:padding="15dp"
                    android:textColor="@color/input_text_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/telephoneLabelFormUpdateUser"
                        android:layout_width="208dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:fontFamily="@font/roboto_medium"
                        android:text="@string/textTitleInputRegisterTelephoneForm"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/initialsLabelFormUpdateUser"
                        android:layout_width="115dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:fontFamily="@font/roboto_medium"
                        android:text="@string/textTitleInputRegisterInitialForm"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/inputTelephoneFormUpdateUser"
                        android:layout_width="228dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/custom_input_form"
                        android:drawableEnd="@drawable/custon_icon_phone"
                        android:drawablePadding="5dp"
                        android:ems="10"
                        android:fontFamily="@font/roboto_regular"
                        android:hint="@string/placeholderInputPhoneRegisterUserForm"
                        android:inputType="textPassword"
                        android:padding="15dp"
                        android:textColor="@color/input_text_color" />

                    <EditText
                        android:id="@+id/inputInitialsFormUpdateUser"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/custom_input_form"
                        android:drawableEnd="@drawable/custon_icon_initials"
                        android:drawablePadding="5dp"
                        android:ems="10"
                        android:fontFamily="@font/roboto_regular"
                        android:hint="@string/placeholderInputInitalsRegisterUserForm"
                        android:inputType="textPassword"
                        android:padding="15dp"
                        android:textColor="@color/input_text_color" />
                </LinearLayout>

                <Button
                    android:id="@+id/updateUserAction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="75dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/custom_button"
                    android:text="@string/textTileButtonUpdateUser"
                    android:textColor="#FFFFFF" />

            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_menu"
        android:layout_gravity="start"
        android:background="@color/green_onlist"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true"
        />
</androidx.drawerlayout.widget.DrawerLayout>