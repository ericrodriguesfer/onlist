<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textTitleLoginActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/Roboto_Black"
            android:text="@string/textTitleLoginActivity"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:layout_marginTop="60dp"/>

        <TextView
            android:id="@+id/textSubTitleLoginActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:fontFamily="@font/Roboto_Regular"
            android:text="@string/textSubTitleLoginActivity"
            android:textAlignment="viewStart"
            android:textColor="@color/gray"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/imageUserLoginActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_user_login"
            tools:ignore="ImageContrastCheck"
            android:layout_marginTop="30dp"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>