<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_toast"
    android:paddingEnd="10dp"
    android:paddingStart="10dp"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/toast_success"
    android:gravity="center"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/img_toast"
        android:src="@drawable/icon_check_toast"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mensagem de sucesso de ação"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/green_onlist" />

</LinearLayout>